@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>

@{
    ViewBag.Title = "UyeKitapGecmisi";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Üye : @ViewBag.uyeAdi</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>KİTAP ADI</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>ÜYENİN İADE ETTİĞİ TARİH</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TBLKITAP.AD</td>
            <td>@x.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.UYEIADETARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>

