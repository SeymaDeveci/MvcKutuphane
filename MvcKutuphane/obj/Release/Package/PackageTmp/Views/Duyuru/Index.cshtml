@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<h2>DUYURULAR</h2>

<table class="table table-sm">
    <tr style="background-color:#f1f1f1">
        <th>DUYURU NO</th>
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>İÇERİK</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    @foreach (var dyr in Model)
    {
        if (dyr.KATEGORI == "Yeni Kitap Duyurusu")
        {
            renk = "bg-info ";
        }
        if (dyr.KATEGORI == "İade Edilmemiş Kitaplar Duyurusu")
        {
            renk = "bg-warning ";
        }
        if (dyr.KATEGORI == "İletişim Bilgilerinizi Doldurmanız Hakkında ")
        {
            renk = "bg-danger ";
        }
        if (dyr.KATEGORI == "Personel Alımı Hakkında Duyuru")
        {
            renk = "bg-success ";
        }
        if (dyr.KATEGORI == "Atölyede Gerçekleştirilecek Etkinlikler")
        {
            renk = "bg-light ";
        }
        if (dyr.KATEGORI == "Diğer")
        {
            renk = "bg-primary";
        }
        <tr class="@renk">
            <td>@dyr.ID</td>
            <td>@dyr.KATEGORI</td>
            <td>@Convert.ToDateTime(dyr.TARIH).ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/Duyuru/DuyuruIcerik/@dyr.ID" class="btn btn-default"
                   style="background-color:antiquewhite">Detaylar</a>
            </td>
            <td><a href="/Duyuru/DuyuruGuncelle/@dyr.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Duyuru/DuyuruSil/@dyr.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Duyuru/YeniDuyuru/" class="btn btn-default" style="background-color:lightgray"> Yeni Duyuru Ekle </a>

