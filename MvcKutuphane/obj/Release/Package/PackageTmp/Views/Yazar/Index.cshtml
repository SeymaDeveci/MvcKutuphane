@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Yazarlar</h2>
<table class="table table-hover">
    <tr style="background-color:#f1f1f1">
        <th>YAZAR ID</th>
        <th>YAZAR ADI</th>
        <th>YAZAR SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var yzr in Model)
    {
        <tr>
            <td>@yzr.ID</td>
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td><button type="button" class="btn btn-danger">@Html.ActionLink("Sil", "YazarSil", new { id = yzr.ID }, new { @style="color:white", onclick = "return confirm('Silmek istiyor musunuz?')" })</button></td>
            <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Yazar/YazarinKitaplari/@yzr.ID" class="btn btn-success" style="background-color:cadetblue;border:none">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a> @*Yazar controller daki yazarekle actionresultına git*@
