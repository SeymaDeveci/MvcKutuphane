@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap İşlemleri</h2>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Girin:&nbsp;</b> @Html.TextBox("p")
        <input type="submit" value="Ara"/> @*type=submit ile girilen değer sunucuya yollanır*@
    </div>
}

<table class="table table-hover">
    <tr style="background-color:#f1f1f1">
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KİTAP YAZARI</th>
        <th>KATEGORİ</th>
        <th>BASIM YILI</th>
        <th>YAYINEVİ</th>
        <th>SAYFA SAYISI</th>
        <th>DURUM</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD&nbsp;@k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYILI</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary"> Yeni Kitap Ekle </a>

