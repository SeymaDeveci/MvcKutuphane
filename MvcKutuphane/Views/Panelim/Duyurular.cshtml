@using MvcKutuphane.Models.Entity
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2 style="color:gray">Duyurular</h2>
<br />
<table class="table table-bordered" style="color:gray">
    <tr style="background-color:#f1f1f1">
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>İÇERİK</th>
    </tr>
    @foreach (var dyr in Model)
    {
        <tr>
            <td>@dyr.KATEGORI</td>
            <td>@Convert.ToDateTime(dyr.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@dyr.ICERİK</td>
        </tr>
    }
</table>

