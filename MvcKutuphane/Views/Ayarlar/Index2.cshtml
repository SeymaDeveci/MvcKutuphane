@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<head>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>

        .modal-content {
            background-color: #fef4ce;
            padding: 25px;
            border-style: solid;
            border-width: 5px;
        }
    </style>
</head>

<body>

    <section class="content-header">
        <div class="container-fluid">
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/istatistik/Index/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Admin Kullanıcı Bilgileri</li>
                </ol>
            </div>
        </div>
    </section>

    <table class="table table-striped">
        <tr>
            <th style="width: 1%">ID</th>
            <th style="width: 10%">Kullanıcı</th>
            <th style="width: 10%">Avatar</th>
            <th style="width: 10%">Yetki</th>
            <th style="width: 10%">Düzenle</th>
            <th style="width: 10%">Sil</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.Kullanici</td>
                <td>
                    <img alt="Avatar" class="table-avatar" style="width:35px; height:35px" src="~/web/img/admin_avatar.png">
                </td>
                <td>@x.Yetki</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@x.ID">
                        <i class="fas fa-pencil-alt"></i> Düzenle
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@x.ID">
                        <i class="fas fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </table>
    <br />
    <button class="btn btn-default" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Admin Ekleme Paneli</h2>
                </div>
                <form method="post" action="/Ayarlar/YeniAdmin/">
                    <div class="modal-body">
                        <label>Kulanıcı Adı</label>
                        <input type="text" name="Kullanici" class="form-control" />
                        <br />
                        <label>Şifre</label>
                        <input type="text" name="Sifre" class="form-control" />
                        <br />
                        <label>Yetki</label>
                        <input type="text" name="Yetki" class="form-control" />
                        <br />
                        <button class="btn btn-warning">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>


</html>
